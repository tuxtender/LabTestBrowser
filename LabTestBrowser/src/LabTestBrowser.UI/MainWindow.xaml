<Window x:Class="LabTestBrowser.UI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:LabTestBrowser.UI"
		xmlns:dialogs="clr-namespace:LabTestBrowser.UI.Dialogs"
		xmlns:localization="clr-namespace:LabTestBrowser.UI.Resources"
		xmlns:ui="http://schemas.modernwpf.com/2019"
		xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
		mc:Ignorable="d"
		Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
		d:DataContext="{d:DesignInstance {x:Type local:LabReportViewModel}}"
		ui:ThemeManager.RequestedTheme="{Binding StatusBar.ApplicationMode, Converter={StaticResource ApplicationThemeConverter}}"
		Title="{x:Static localization:Strings.ApplicationTitle}"
		Width="600"
		Height="800"
		SizeToContent="Manual">

	<b:Interaction.Triggers>
		<b:EventTrigger EventName="Loaded">
			<b:InvokeCommandAction Command="{Binding LoadCommand}" />
		</b:EventTrigger>
	</b:Interaction.Triggers>

	<Grid>
		<DockPanel LastChildFill="True">
			<local:LabReportCommandBar DockPanel.Dock="Top" />

			<local:StatusBarControl DockPanel.Dock="Bottom"
									DataContext="{Binding StatusBar}" />

			<local:LabRequisitionControl DockPanel.Dock="Left"
										 Padding="5, 0"
										 DataContext="{Binding Path= LabRequisition}" />
			<local:CompleteBloodCountControl DockPanel.Dock="Right"
											 Padding="5, 0"
											 DataContext="{Binding Path= CompleteBloodCount}" />
		</DockPanel>

		<dialogs:DialogView DataContext="{Binding DialogViewModel}" />
	</Grid>
</Window>