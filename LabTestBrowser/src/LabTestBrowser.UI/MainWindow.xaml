<Window x:Class="LabTestBrowser.UI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:LabTestBrowser.UI"
		xmlns:dialogs="clr-namespace:LabTestBrowser.UI.Dialogs"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance {x:Type local:LabReportViewModel}}"
		SizeToContent="WidthAndHeight"
		Title="MainWindow">

	<Grid>
		<StackPanel>
			<local:LabReportCommandBar />
			<WrapPanel Orientation="Horizontal">
				<local:LabRequisitionControl Padding="5, 0"
											 DataContext="{Binding Path= LabRequisition }" />
				<local:LabTestResultsControl Padding="5, 0" />
			</WrapPanel>
		</StackPanel>

		<dialogs:DialogView DataContext="{Binding DialogViewModel}" />
	</Grid>

</Window>