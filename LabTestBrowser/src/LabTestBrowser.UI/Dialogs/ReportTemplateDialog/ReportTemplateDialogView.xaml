<UserControl x:Class="LabTestBrowser.UI.Dialogs.ReportTemplateDialog.ReportTemplateDialogView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:LabTestBrowser.UI.Dialogs.ReportTemplateDialog"
			 xmlns:ui="http://schemas.modernwpf.com/2019"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance {x:Type local:ReportTemplateDialogViewModel}}">
	<UserControl.Resources>

		<DataTemplate x:Key="ExportListViewTemplate">
			<Grid Visibility="Visible"
				  IsEnabled="True">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="1"
						   IsEnabled="True"
						   Visibility="Visible"
						   Text="{Binding Title}"
						   Style="{DynamicResource BaseTextBlockStyle}"
						   Margin="12,6,0,0" />
				<TextBlock Grid.Column="1"
						   Grid.Row="1"
						   Text="{Binding Path}"
						   Style="{DynamicResource BodyTextBlockStyle}"
						   Margin="12,0,0,6" />
			</Grid>
		</DataTemplate>

	</UserControl.Resources>

	<ui:SimpleStackPanel Spacing="12">

		<ui:ListView x:Name="Control2"
					 Visibility="Visible"
					 SelectionMode="Multiple"
					 IsManipulationEnabled="True"
					 ItemTemplate="{StaticResource ExportListViewTemplate}"
					 ItemsSource="{Binding LabTestReportTemplates}"
					 BorderThickness="1"
					 BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
					 Width="300"
					 Height="200"
					 HorizontalAlignment="Left">

			<ui:ListView.Resources>
				<Style TargetType="{x:Type ui:ListViewItem}">
					<Setter Property="IsSelected"
							Value="{Binding IsSelected}" />
				</Style>
			</ui:ListView.Resources>

		</ui:ListView>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0"
					Content="Ok"
					Margin="0, 0,2,0"
					HorizontalAlignment="Stretch"
					Command="{Binding FilterCommand}"
					Style="{DynamicResource AccentButtonStyle}" />
			<Button Grid.Column="1"
					Content="Cancel"
					Margin="2, 0,0,0"
					IsCancel="True"
					Command="{Binding CancelCommand}"
					HorizontalAlignment="Stretch" />
		</Grid>

	</ui:SimpleStackPanel>
</UserControl>