<UserControl x:Class="LabTestBrowser.UI.CompleteBloodCountControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:LabTestBrowser.UI"
			 xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
			 d:DataContext="{d:DesignInstance {x:Type local:CompleteBloodCountViewModel}}"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300">
	
	<UserControl.Resources>
			<DataTemplate x:Key="CompleteBloodCountTemplate">
			<StackPanel>
				<Grid Margin="25,15">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Text="WBC"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Column="1"
							   FontSize="13"
							   Text="{Binding WhiteBloodCell}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="1"
							   Text="LYM%"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="1"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding LymphocytePercent}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="2"
							   Text="MON%"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="2"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding MonocytePercent}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="3"
							   Text="EOS%"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="3"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding EosinophilPercent}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="4"
							   Text="RBC"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="4"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding RedBloodCell}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="5"
							   Text="HGB"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="5"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding Hemoglobin}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="6"
							   Text="HCT"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="6"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding Hematocrit}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="7"
							   Grid.Column="0"
							   Text="MCV"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="7"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding MeanCorpuscularVolume}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="8"
							   Grid.Column="0"
							   Text="MCH"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="8"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding MeanCorpuscularHemoglobin}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="9"
							   Grid.Column="0"
							   Text="MCHC"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="9"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding MeanCorpuscularHemoglobinConcentration}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="10"
							   Grid.Column="0"
							   Text="RDW_CV"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="10"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding RedBloodCellDistributionWidth}"
							   HorizontalAlignment="Right" />

					<TextBlock Grid.Row="11"
							   Grid.Column="0"
							   Text="PLT"
							   FontWeight="SemiBold"
							   FontSize="13" />
					<TextBlock Grid.Row="11"
							   Grid.Column="1"
							   FontSize="13"
							   Text="{Binding Platelet}"
							   HorizontalAlignment="Right" />
				</Grid>
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>

	<GroupBox Header="ОАК"
			  d:DataContext="{d:DesignInstance {x:Type local:LabReportViewModel}}">
		<StackPanel>
		<DataGrid Padding="5"
				  Height="470"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  HeadersVisibility="Column"
				  GridLinesVisibility="Horizontal"
				  RowDetailsVisibilityMode="VisibleWhenSelected"
				  BorderThickness="1"
				  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
				  VerticalScrollBarVisibility="Visible"
				  RowDetailsTemplate="{StaticResource CompleteBloodCountTemplate}"
				  ItemsSource="{Binding CompleteBloodCounts}"
				  SelectedItem="{Binding SelectedCompleteBloodCount}"
				  VirtualizingPanel.VirtualizationMode="Recycling"
				  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
				  >
			<b:Interaction.Triggers>
				<b:EventTrigger EventName="SelectionChanged">
					<b:InvokeCommandAction Command="{Binding UpdateByTestResultSelectCommand}" />
				</b:EventTrigger>
			</b:Interaction.Triggers>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Образец"
									Width="110"
									Binding="{Binding LabOrder}" />
				<DataGridTextColumn Header="ID"
									Width="110"
									Binding="{Binding ExternalId}" />
				<DataGridTextColumn Header="Дата"
									Width="130"
									Binding="{Binding ObservationTimestamp, StringFormat={}{0:dd.MM.yy HH:mm:ss}}" />
			</DataGrid.Columns>
		</DataGrid>
			<StackPanel Margin="5"
						Orientation="Horizontal"
						HorizontalAlignment="Right">
				<Button Command="{Binding ResetCommand}"
						Margin="0, 0,2,0"
						Content="Сброс" />
				<Button Command="{Binding SuppressCommand}"
						Margin="2, 0,0,0"
						Content="Брак" />
				<Button Command="{Binding AssignCommand}"
						Style="{DynamicResource AccentButtonStyle}"
						Margin="2, 0,0,0"
						Content="Включить в отчете" />
			</StackPanel>
		</StackPanel>
	</GroupBox>
</UserControl>